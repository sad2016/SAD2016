
<div id="contentOuterSeparator"></div>
<div class="container">
  <div class="divPanel page-content">
    <div class="row-fluid">
      <div class="span8" id="divMain">
        <h1>Listing Cuisines</h1>

        <table class="table">
          <thead>
          <tr>
            <th>Name</th>
            <th colspan="3"></th>
          </tr>
          </thead>

          <tbody>
          <% @cuisines.each do |cuisine| %>
              <tr>
                <td><%= cuisine.name %></td>
                <td><%= link_to 'Show', cuisine, class: "btn btn-info"  %></td>
                <td><%= link_to 'Edit', edit_cuisine_path(cuisine), class: "btn btn-primary"  %></td>
                <td><%= link_to 'Destroy', cuisine, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger"   %></td>
              </tr>
          <% end %>
          </tbody>
        </table>

        <br>

        <%= link_to 'New Cuisine', new_cuisine_path , class: "btn btn-primary"  %>
      </div>
    </div>
  </div>
</div>