<div id="contentOuterSeparator"></div>
<div class="container">
  <div class="divPanel page-content">
    <div class="row-fluid">
      <div class="span9">

        <h1>Recipes</h1>
        <div>
          <%= form_tag 'http://web4.cs.ait.ac.th/khaiyekhabo/recipes/search', :method => "get" do %>
              <%= text_field_tag :search, params[:search], :placeholder=>"Search for Recipes" %>
              <%= submit_tag("Search")%>
          <%end%>
        </div>
        <div id="gridArea">
          <ul type="none" id="tiles">
            <% @recipes.each do |recipe| %>
                <li>
                  <%=link_to(image_tag(recipe.picture_url(:thumb), width:'350', height:'200'),recipe)if recipe.picture?  %>
                  <div class="meta"><span></span><span class="pull-right">By <%= recipe.user.username %></span></div>
                  <h4><%= recipe.title %></h4>
                  <p><%=link_to("View Recipe",recipe)%></p>
                </li>
            <% end %>
          </ul>
        </div>
      </div>
